pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        TF_VAR_region = 'us-east-1'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Manjyyot/TerraformTravelmemory.git'
            }
        }

        stage('Setup AWS Credentials') {
            steps {
                script {
                    withEnv(["AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}", "AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}", "AWS_DEFAULT_REGION=${TF_VAR_region}"]) {
                        sh 'aws sts get-caller-identity'
                    }
                }
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                script {
                    dir('terraform') {
                        sh '''
                        terraform init
                        terraform apply -auto-approve
                        '''
                    }
                }
            }
        }

        stage('Retrieve Terraform Outputs') {
            steps {
                script {
                    dir('terraform') {
                        env.BACKEND_IP = sh(script: "terraform output -raw backend_instance_ip", returnStdout: true).trim()
                        env.FRONTEND_IP = sh(script: "terraform output -raw frontend_instance_ip", returnStdout: true).trim()
                        env.MONGODB_IP = sh(script: "terraform output -raw mongodb_instance_ip", returnStdout: true).trim()
                    }
                }
            }
        }

        stage('Deploy Backend') {
            steps {
                script {
                    sshCommand remote: [name: 'backend-server', host: env.BACKEND_IP, user: 'ubuntu', identityFile: 'newManjyyot.pem'], command: '''
                        sudo apt update -y
                        sudo apt install -y nodejs npm git
                        git clone https://github.com/Manjyyot/TerraformTravelmemory.git
                        cd TerraformTravelmemory/backend
                        echo "MONGO_URI=mongodb://${env.MONGODB_IP}:27017/mydb" > .env
                        echo "PORT=3000" >> .env
                        npm install
                        nohup node index.js > backend.log 2>&1 &
                    '''
                }
            }
        }

        stage('Deploy Frontend') {
            steps {
                script {
                    sshCommand remote: [name: 'frontend-server', host: env.FRONTEND_IP, user: 'ubuntu', identityFile: 'newManjyyot.pem'], command: '''
                        sudo apt update -y
                        sudo apt install -y nodejs npm git
                        git clone https://github.com/Manjyyot/TerraformTravelmemory.git
                        cd TerraformTravelmemory/frontend
                        echo "export const API_URL = 'http://${env.BACKEND_IP}:3000';" > src/url.js
                        npm install
                        npm start &
                    '''
                }
            }
        }

        stage('Deploy MongoDB') {
            steps {
                script {
                    sshCommand remote: [name: 'mongodb-server', host: env.MONGODB_IP, user: 'ubuntu', identityFile: 'newManjyyot.pem'], command: '''
                        sudo apt update -y
                        sudo apt install -y mongodb
                        sudo systemctl start mongodb
                        sudo systemctl enable mongodb
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
